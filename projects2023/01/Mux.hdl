/** 
 * Multiplexor:
 * if (sel == 0) out = a, else out = b
 */
CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    /* c*b + nc*a */
    Not (in=sel, out=nsel);
    And (a=a, b=nsel, out=sa);
    And (a=b, b=sel,  out=sb);
    Or (a=sa, b=sb, out=out);

}
